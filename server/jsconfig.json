{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": "./src",
        "paths": {
            "@models/*": ["models/*"],
            "@controllers/*": ["controllers/*"]
        }
    },
    "exclude": ["node_modules", "build"],
    "include": ["src/**/*"]
}
